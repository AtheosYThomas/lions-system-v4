
entrypoint = "src/index.ts"
modules = ["nodejs-22", "postgresql-16"]
hidden = [".config", "package-lock.json"]

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "package.json", "package-lock.json"]

[nix]
channel = "stable-24_11"

[deployment]
run = ["sh", "-c", "npm run init-db && npm run dev"]
deploymentTarget = "autoscale"
ignorePorts = false

[workflows]
runButton = "Development"

[[workflows.workflow]]
name = "Run TypeScript Server"
author = 44484841
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx ts-node src/index.ts"

[[workflows.workflow]]
name = "Build and Run"
author = 44484841
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx tsc"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node dist/index.js"

[[workflows.workflow]]
name = "Build and Run Production"
author = 44484841
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build:all"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node dist/index.js"

[[workflows.workflow]]
name = "Development Server"
author = 44484841
mode = "sequential"


[[workflows.workflow]]
name = "System Recovery"
author = 44484841
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"ts-node|tsx|vite\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 2"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run init-db"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"


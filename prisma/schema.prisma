
// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Member {
  id           String   @id @default(cuid())
  name         String
  email        String?
  line_user_id String   @unique
  role         String
  phone        String?
  english_name String?
  birthday     DateTime?
  job_title    String?
  mobile       String?
  fax          String?
  address      String?
  status       String?  @default("active")
  created_at   DateTime @default(now())

  @@map("members")
}

model PushTemplate {
  id          String   @id @default(cuid())
  name        String
  description String?
  json        Json
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@map("push_templates")
}
